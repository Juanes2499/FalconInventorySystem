@page
@model FalnconInventorySystem.App.Frontend.Pages.BodegaEditModel


<div class="container-edit">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Editar Proveedor</h5>
        </div>
        <div class="modal-body-edit">
            <form method="post">
                <input type="hidden" asp-for="WareHouse.Id" />
                <div class="form-group">
                    <label for="nombre-producto">Capacidad Máxima</label>
                    <input type="num" class="form-control" asp-for="WareHouse.MaximumCapacity"
                        placeholder="Capacidad Máxima">
                </div>
                <div class="form-group">
                    <label for="descripcion">Capacidad Mínima</label>
                    <input type="num" class="form-control" asp-for="WareHouse.MinimumCapacity" 
                        placeholder="Capacidad Minima">
                </div>
                <div class="form-group">
                    <label for="marca">Observación</label>
                    <input type="text" class="form-control" asp-for="WareHouse.Observation" placeholder="Observacion">
                </div>
                <div class="modal-footer">
                    <a asp-page="/Bodega" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Si, Actualizar Bodega</button>
                </div>
            </form>
        </div>
    </div>
 </div>
