@page
@model BodegaModel


<div class="container my-5">
    <div class="d-flex justify-content-between">
        <a class="back-dashboard" href="Dashboard">
            <img src="https://img.icons8.com/ios-filled/50/000000/back.png" />
            Bodega
        </a>
        <div class="button-search row">

            <div class="input-append">
                <input type="text" class="input-medium search-query" name="s" placeholder="Search" value="">
            </div>

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Crear">
                Crear Bodega
            </button>
        </div>
    </div>

   </br>
   
    <div>
        <table class="table table-responsive-xl">
            <thead class="header-tabla">
                <tr>
                    <th class="header-tabla-titulo">Capacidad Máxima</th>   
                    <th class="header-tabla-titulo">Capacidad Mínima</th>
                    <th class="header-tabla-titulo">Observation</th>
                    <th class="header-tabla-titulo">Fecha Creacion</th>
                    <th class="header-tabla-titulo">Fecha Actualizacion</th>
                    <th class="header-tabla-titulo">Acciones</th>
                </tr>
            </thead>
         
            <tbody class="table-body">
                @foreach (var warehouse in Model.WareHouseList)
                {
                    <tr>
                        <td>@warehouse.MaximumCapacity</td>
                        <td>@warehouse.MinimumCapacity</td>
                        <td>@warehouse.Observation</td>
                        <td>@warehouse.CreationDate</td>
                        <td>@warehouse.ModificationDate</td>

                        <td class="text-center">
                            <a asp-page="/BodegaEdit" asp-route-wareHouseId="@warehouse.Id"><i
                                class="far fa-edit fa-2x"></i></a>
                            <a asp-page="/BodegaDelete" asp-route-wareHouseId="@warehouse.Id"><i
                                class="fas fa-trash-alt fa-2x"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->

<div class="modal fade" id="Crear" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Crear Bodega</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" asp-for="WareHouse.Id" />
                    <div class="form-group">
                        <label for="nombre-producto">Capacidad Máxima</label>
                        <input type="num" class="form-control" asp-for="WareHouse.MaximumCapacity"
                            placeholder="Capacidad Máxima">
                    </div>
                    <div class="form-group">
                        <label for="descripcion">Capacidad Minima</label>
                        <input type="num" class="form-control" asp-for="WareHouse.MinimumCapacity" 
                            placeholder="Capacidad Minima">
                    </div>
                    <div class="form-group">
                        <label for="marca">Observacion</label>
                        <input type="text" class="form-control" asp-for="WareHouse.Observation" placeholder="Observacion">
                    </div>
                    <!--
                    <div class="form-group">
                        <label for="categoria">Categoria</label>
                        <input type="tel" class="form-control" asp-for="Product.CategoryId" placeholder="Categoria">
                    </div>
                    -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Crear proveedor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- eliminar -->

<div class="modal fade" id="eliminar-proveedor" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Eliminar Proveedor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mensage-eliminar">
                        <p>¿Esta seguro que desea <span>borrar</span> el registro?</p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Eliminar proveedor</button>
            </div>
        </div>
    </div>
</div>