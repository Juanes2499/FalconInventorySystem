<!-- Modal Crear -->

<div class="modal fade" id="Crear" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLongTitle">Crear Bodega</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" asp-for="WareHouse.Id" />
                    <div class="form-group">
                        <label for="nombre-producto">Capacidad Máxima</label>
                        <input type="num" class="form-control" asp-for="WareHouse.MaximumCapacity"
                            placeholder="Capacidad Máxima">
                    </div>
                    <div class="form-group">
                        <label for="descripcion">Capacidad Minima</label>
                        <input type="num" class="form-control" asp-for="WareHouse.MinimumCapacity" 
                            placeholder="Capacidad Minima">
                    </div>
                    <div class="form-group">
                        <label for="marca">Observacion</label>
                        <input type="text" class="form-control" asp-for="WareHouse.Observation" placeholder="Observacion">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Crear Bodega</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Nueva tabla-->
<div class="container-table">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead class="first-column-table">
            <tr style="text-center">
                <th class="color-texto">ID</th>
                <th class="color-texto">Capacidad Máxima</th>
                <th class="color-texto">Capacidad Mínima</th>
                <th class="color-texto">Observación</th>
                <th class="color-texto">Fecha Creación</th>
                <th class="color-texto">Fecha Actualización</th>
                <th class="color-texto" style="text-align:center;width:100px;">Acciones</th>
            </tr>
        </thead>
        <tbody class="table-body">
            @foreach (var warehouse in Model.WareHouseList)
            {
            <tr class="data">
                <td>@warehouse.Id</td>
                <td>@warehouse.MaximumCapacity</td>
                <td>@warehouse.MinimumCapacity</td>
                <td>@warehouse.Observation</td>
                <td>@warehouse.CreationDate</td>
                <td>@warehouse.ModificationDate</td>
                <td class="text-center">
                    <a class="btn btn-success" asp-page="/BodegaEdit" asp-route-wareHouseId="@warehouse.Id">
                        <i class="far fa-edit fa-1x"></i>
                    </a>
                    <a class="btn btn-danger" asp-page="/BodegaDelete" asp-route-wareHouseId="@warehouse.Id">
                        <i class="fas fa-trash-alt fa-1x"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>  
    </table>
</div>
