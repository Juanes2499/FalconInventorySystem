@page
@model FalnconInventorySystem.App.Frontend.Pages.CategoryEditModel

<div class="container-edit">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Editar Categoría</h5>
        </div>
        <div class="modal-body-edit">
            <form method="post">
                <input type="hidden" asp-for="Category.Id" />
                <div class="form-group">
                    <label for="razon_social">Nombre categoría</label>
                    <input type="text" class="form-control" asp-for="Category.CategoryName" placeholder="Nombre categoría">
                </div>
                <div class="modal-footer">
                    <a asp-page="/Category" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Actualizar Categoría</button>
                </div>
            </form>
        </div>
    </div>
</div>
