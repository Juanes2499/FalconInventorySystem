<div class="modal fade" id="Crear" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Crear Orden de Venta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" asp-for="BillOrder.Id" />
                    <div class="form-group">
                        <label for="nombre-producto">Cliente</label>
                        <input type="num" class="form-control" asp-for="BillOrder.Client"
                            placeholder="Numero Orden">
                    </div>
                    <div class="form-group">
                        <label for="marca">Observacion</label>
                        <input type="text" class="form-control" asp-for="BillOrder.Observation" placeholder="Observacion">
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Crear Orden de Venta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Nueva tabla-->
<div class="container-table">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead class="first-column-table">
            <tr style="text-center">
                <th class="color-texto">ID</th>
                <th class="color-texto">Fecha creacion orden</th>
                <th class="color-texto">Cliente</th>
                <th class="color-texto">Observación</th>
                <th class="color-texto">Fecha Creacion</th>
                <th class="color-texto">Fecha Actualizacion</th>
                <th class="color-texto">Acciones</th>
            </tr>
        </thead>
        <tbody class="table-body">
            @foreach (var billOrder in Model.BillOrderList)
            {
            <tr>
                <td>@billOrder.Id</td>
                <td>@billOrder.OrderCreationDate</td>
                <td>@billOrder.Client</td>
                <td>@billOrder.Observation</td>
                <td>@billOrder.CreationDate</td>
                <td>@billOrder.ModificationDate</td>

                <td class="text-center">
                    <a class="btn btn-success" asp-page="/BillOrderDetails" asp-route-BillOrderId="@billOrder.Id">
                        <i class="far fa-edit fa-1x"></i>
                    </a>
                    <a class="btn btn-danger" asp-page="/BillOrderDelete" asp-route-BillOrderId="@billOrder.Id">
                        <i class="fas fa-trash-alt fa-1x"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


