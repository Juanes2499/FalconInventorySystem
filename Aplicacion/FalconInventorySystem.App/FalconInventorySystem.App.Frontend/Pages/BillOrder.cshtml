@page
@model FalnconInventorySystem.App.Frontend.Pages.BillOrderModel

<div class="container my-5">
    <div class="d-flex justify-content-between">
        <a class="back-dashboard" href="Dashboard">
            <img src="https://img.icons8.com/ios-filled/50/000000/back.png" />
            Orden de Venta
        </a>
        <div class="button-search row">

            <div class="input-append">
                <input type="text" class="input-medium search-query" name="s" placeholder="Search" value="">
            </div>

            <a asp-page=".\BillOrderDetails" class="btn btn-primary">Crear Orden de Venta</a>
        </div>
    </div>
</div>


   </br>
   
    <div>
        <table class="table table-responsive-xl">
            <thead class="header-tabla">
                <tr>
                    <th class="header-tabla-titulo">ID</th>
                    <th class="header-tabla-titulo">Fecha creacion orden</th>
                    <th class="header-tabla-titulo">Cliente</th>
                    <th class="header-tabla-titulo">Observación</th>
                    <th class="header-tabla-titulo">Fecha Creacion</th>
                    <th class="header-tabla-titulo">Fecha Actualizacion</th>
                    <th class="header-tabla-titulo">Acciones</th>
                </tr>
            </thead>
         
            <tbody class="table-body">
                @foreach (var billOrder in Model.BillOrderList)
                {
                <tr>
                    <td>@billOrder.Id</td>
                    <td>@billOrder.OrderCreationDate</td>
                    <td>@billOrder.Client</td>
                    <td>@billOrder.Observation</td>
                    <td>@billOrder.CreationDate</td>
                    <td>@billOrder.ModificationDate</td>

                    <td class="text-center">
                        <a asp-page="/BillOrderDetails" asp-route-BillOrderId="@billOrder.Id">
                            <i class="far fa-edit fa-2x"></i>
                        </a>
                        <a asp-page="/BillOrderDelete" asp-route-BillOrderId="@billOrder.Id">
                            <i class="fas fa-trash-alt fa-2x"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="Crear" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Crear Orden de Venta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" asp-for="BillOrder.Id" />
                    <div class="form-group">
                        <label for="nombre-producto">Cliente</label>
                        <input type="num" class="form-control" asp-for="BillOrder.Client"
                            placeholder="Numero Orden">
                    </div>
                    <div class="form-group">
                        <label for="marca">Observacion</label>
                        <input type="text" class="form-control" asp-for="BillOrder.Observation" placeholder="Observacion">
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Crear proveedor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- eliminar -->

<div class="modal fade" id="eliminar-proveedor" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Eliminar Proveedor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mensage-eliminar">
                        <p>¿Esta seguro que desea <span>borrar</span> el registro?</p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Eliminar proveedor</button>
            </div>
        </div>
    </div>
</div>
