<!--Modal Crear-->

<div class="modal fade" id="Crear" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Crear Orden de Compra</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" asp-for="PurchaseOrder.Id" />
                    <div class="form-group">
                        <label for="nombre-producto">Número Orden de Compra</label>
                        <input type="text" class="form-control" asp-for="PurchaseOrder.NumberOrder"
                            placeholder="Numero Orden">
                    </div>
                    <div class="form-group">
                        <label for="proveedor">Proveedor</label>
                        <select class="form-control" asp-for="PurchaseOrder.SupplierId">
                            <option value="">Seleccionar un Proveedor</option>
                                @foreach (var supplier in Model.SupplierList)
                                {
                                <option value=@supplier.Id>@supplier.SupplierName</option>
                                }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="marca">Observacion</label>
                        <input type="text" class="form-control" asp-for="PurchaseOrder.Observation" placeholder="Observacion">
                    </div>
                    
                    <div class="form-group">
                        <label for="categoria">Impuesto</label>
                        <input type="num" class="form-control" asp-for="PurchaseOrder.Tax" placeholder="Impuesto">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Crear proveedor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Nueva tabla-->
<div class="container-table">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead class="first-column-table">
            <tr style="text-center">
                <th class="color-texto">ID</th>
                <th class="color-texto">Número de orden</th>
                <th class="color-texto">Fecha Creación Orden</th>
                <th class="color-texto">Proveedor</th>
                <th class="color-texto">Observación</th>
                <th class="color-texto">Impuesto</th>
                <th class="color-texto">Fecha Creacion</th>
                <th class="color-texto">Fecha Actualizacion</th>
                <th class="color-texto" style="text-align:center;width:100px;">Acciones</th>
            </tr>
        </thead>
          <tbody class="table-body">
                @foreach (var purchaseOrder in Model.PurchaseOrderList)
                {
                <tr>
                    <td>@purchaseOrder.Id</td>
                    <td>@purchaseOrder.NumberOrder</td>
                    <td>@purchaseOrder.OrderCreationDate</td>
                    <td>@purchaseOrder.Supplier.SupplierName</td>
                    <td>@purchaseOrder.Observation</td>
                    <td>@purchaseOrder.Tax</td>
                    <td>@purchaseOrder.CreationDate</td>
                    <td>@purchaseOrder.ModificationDate</td>

                    <td class="text-center">
                        <a class="btn btn-success" asp-page="/OrdenCompraDetails" asp-route-PurchaseOrderId="@purchaseOrder.Id">
                            <i class="far fa-edit fa-1x"></i>
                        </a>
                        <a class="btn btn-danger" asp-page="/OrdenCompraDelete" asp-route-PurchaseOrderId="@purchaseOrder.Id">
                            <i class="fas fa-trash-alt fa-1x"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
    </table>
</div>