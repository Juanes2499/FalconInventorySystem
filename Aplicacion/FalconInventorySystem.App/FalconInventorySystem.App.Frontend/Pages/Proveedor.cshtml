<!-- Modal  Crear-->
<div class="modal fade" id="Crear" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Crear Proveedor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" asp-for="Supplier.Id" />
                    <div class="form-group">
                        <label for="razon_social">Raz贸n Social</label>
                        <input type="text" class="form-control" asp-for="Supplier.SupplierName"
                            placeholder="Raz贸n Social">
                    </div>
                    <div class="form-group">
                        <label for="nit">NIT</label>
                        <input type="text" class="form-control" asp-for="Supplier.Nit" placeholder="NIT">
                    </div>
                    <div class="form-group">
                        <label for="direccion">Direccion</label>
                        <input type="text" class="form-control" asp-for="Supplier.Address" placeholder="Direccion">
                    </div>
                    <div class="form-group">
                        <label for="phone">Telefono</label>
                        <input type="tel" class="form-control" asp-for="Supplier.Phone" placeholder="Telefono">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="tel" class="form-control" asp-for="Supplier.Email" placeholder="Email">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Crear proveedor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Nueva tabla-->
<div class="container-table">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead class="first-column-table">
            <tr style="text-center">
                <th class="color-texto">Nit</th>
                <th class="color-texto">Nombre proveedor</th>
                <th class="color-texto">Direcci贸n</th>
                <th class="color-texto">Telefono</th>
                <th class="color-texto">Correo</th>
                <th class="color-texto">Fecha Creacion</th>
                <th class="color-texto">Fecha Actualizacion</th>
                <th class="color-texto" style="text-align:center;width:100px;">Acciones</th>
            </tr>
        </thead>
            <tbody class="table-body">
                @foreach (var supplier in Model.SuppliersList)
                {
                    <tr>
                        <td>@supplier.Nit</td>
                        <td>@supplier.SupplierName</td>
                        <td>@supplier.Address</td>
                        <td>@supplier.Phone</td>
                        <td>@supplier.Email</td>
                        <td>@supplier.CreationDate</td>
                        <td>@supplier.ModificationDate</td>
                        <td class="text-center">
                            <a class="btn btn-success" asp-page="/ProveedoresEdit" asp-route-supplierId="@supplier.Id"><i
                                class="far fa-edit fa-1x"></i></a>
                            <a class="btn btn-danger" class="btn btn-success"asp-page="/ProveedoresDelete" asp-route-supplierId="@supplier.Id"><i
                                class="fas fa-trash-alt fa-1x"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
    </table>
</div>
