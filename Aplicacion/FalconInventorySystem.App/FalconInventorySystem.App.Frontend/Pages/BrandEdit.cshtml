@page
@model FalnconInventorySystem.App.Frontend.Pages.BrandEditModel

<div class="container-edit">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Editar Marca</h5>
        </div>
        <div class="modal-body-edit">
            <form method="post">
                <input type="hidden" asp-for="Brand.Id" />
                <div class="form-group">
                    <label for="razon_social">Nombre marca</label>
                    <input type="text" class="form-control" asp-for="Brand.BrandName" placeholder="Nombre marca">
                </div>
                <div class="modal-footer">
                    <a asp-page="/Brand" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Actualizar Marca</button>
                </div>
            </form>
        </div>
    </div>
</div>