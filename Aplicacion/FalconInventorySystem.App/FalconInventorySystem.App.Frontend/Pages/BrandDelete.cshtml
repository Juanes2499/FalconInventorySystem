@page
@model FalnconInventorySystem.App.Frontend.Pages.BrandDeleteModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Eliminar Marca</h5>
    </div>
    <div class="modal-body-edit">
        <form method="post">
            <input type="hidden" asp-for="Brand.Id" />
            <div class="form-confirm">
                <label for="confirmacion">
                    ¿Esta seguro que desea eliminar la marca
                    @Model.Brand.BrandName?
                </label>
            </div>

            <div class="modal-footer">
                <a asp-page="/Brand" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Si, estoy seguro</button>
            </div>
        </form>
    </div>
</div>
