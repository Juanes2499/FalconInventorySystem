@page
@model FalnconInventorySystem.App.Frontend.Pages.BillOrdeItemEditModel

<div class="container-edit">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Editar Item</h5>
        </div>
        <div class="modal-body-edit">
            <form method="post">
                <input type="hidden" asp-for="BillOrderItem.Id" />
                <input type="hidden" asp-for="BillOrderItem.BillOrderId" />
                <div class="form-group">
                    <label for="razon_social">Producto</label>
                    <select class="form-control" asp-for="BillOrderItem.ProductId">
                        <option value="">Seleccionar un producto</option>
                        @foreach (var product in Model.ProductList)
                        {
                            <option value=@product.Id>@product.ProductName</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="razon_social">Cantidad</label>
                    <input type="text" class="form-control" asp-for="BillOrderItem.Amount" placeholder="Cantidad">
                </div>

                <div class="form-group">
                    <label for="razon_social">Estado</label>
                    <select class="form-control" asp-for="BillOrderItem.StateId">
                        <option value="">Seleccionar un estado</option>
                        @foreach (var state in Model.StateList)
                        {
                            <option value=@state.Id>@state.StateName</option>
                        }
                    </select>
                </div>
            
                <div class="form-group">
                    <label for="razon_social">Observación</label>
                    <input type="text" class="form-control" asp-for="BillOrderItem.Observation" placeholder="Observación">
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" asp-page-handler="BillOrdenItem">Añadir Item</button>
                </div>
            </form>
        </div>
    </div>
</div>
